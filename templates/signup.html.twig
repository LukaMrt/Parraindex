{% extends 'layouts/base.html.twig' %}

{% set style = asset('styles/signup.scss') %}
{% set title = 'Parraindex - Inscription' %}

{% block javascripts %}
    <script type="module" src="{{ asset('scripts/signup.js') }}" defer></script>
{% endblock %}

{% block content %}

    <form class="form" action="{{ url('home') }}" method="post">

        <h1 class="form__title">Inscription</h1>

        <div class="form-content">

            <div class="form-block form-block--row">

                {% include "components/form/input.html.twig" with {
                    'type': 'text',
                    'slug': 'firstname',
                    'title': 'Prénom',
                    'placeholder': 'John'
                } %}

                {% include "components/form/input.html.twig" with {
                    'type': 'text',
                    'slug': 'lastname',
                    'title': 'Nom',
                    'placeholder': 'Doe'
                } %}

            </div>

            {% include "components/form/input.html.twig" with {
                'type': 'email',
                'slug': 'email',
                'title': 'Email universitaire',
                'placeholder': 'john.doe@etu.univ-lyon1.fr',
                'pattern' : "^[a-zA-Z0-9._-]+\.[a-zA-Z0-9._-]+@etu.univ-lyon1.fr$"
            } %}

            {% include "components/form/input.html.twig" with {
                'type': 'password',
                'slug': 'password',
                'title': 'Mot de passe',
                'placeholder': '••••••••••'
            } %}

            {% include "components/form/input.html.twig" with {
                'type': 'password',
                'slug': 'password-confirm',
                'title': 'Répétez le mot de passe',
                'placeholder': '••••••••••'
            } %}

            <div class="form-block form-block--row form-block--space-around">

                {% include "components/link.html.twig" with{
                    'option': 'link-wrapper',
                    'prefix': 'Vous avez déjà un compte ?',
                    'title': 'Connectez-vous',
                    'href': url('home')
                } %}

                {% include "components/button.html.twig" with {
                    'type': 'submit',
                    'button_content': 'Envoyer',
                    'priority': 'primary',
                    'name': 'action',
                    'value': 'register'
                } %}

            </div>

        </div>

    </form>

{% endblock %}