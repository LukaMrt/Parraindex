{% extends '/old/view/layouts/default.twig' %}

{% set style = style('sponsor.css') %}
{% set title = 'Parraindex - Lien' %}

{% block javascripts %}
    <script src="{{ script('sponsor.js') }}" defer></script>
{% endblock %}

{% block content %}

    <div class="sponsor">
        <h1>{{ sponsor.type }}</h1>

        {% include 'components/sponsor.twig' with {
            'sponsor': sponsor,
            'godFather': godFather,
            'godChild': godChild,
        } %}

        {% include 'components/sponsor-description.twig' with {
            'sponsor': sponsor
        } %}

        {% if login.privilege == 'ADMIN' %}
            <a class="sponsor__actions" href="{{ router.url('editsponsor_get', {id: sponsor.id}) }}">
                <img src="{{ icon("pen.svg") }}" alt="modifier">
            </a>
        {% endif %}
    </div>


{% endblock %}