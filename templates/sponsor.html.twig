{% extends 'layouts/base.html.twig' %}

{% set style = asset('styles/app.scss') %}
{% set title = 'Parraindex - Lien' %}

{% block javascripts %}
    <script src="{{ asset('scripts/sponsor.js') }}" defer></script>
{% endblock %}

{% block content %}

    <div class="sponsor">
        <h1>{{ sponsor.type.title }}</h1>

        {% include 'components/sponsor.html.twig' with {
            'sponsor': sponsor,
        } %}

        {% include 'components/sponsor-description.html.twig' with {
            'sponsor': sponsor
        } %}

        {% if app.user ?? false and app.user.admin %}
            <a class="sponsor__actions" href="{{ url('home', {id: sponsor.id}) }}">
                <img src="{{ asset('images/icons/pen.svg') }}" alt="modifier">
            </a>
        {% endif %}
    </div>


{% endblock %}