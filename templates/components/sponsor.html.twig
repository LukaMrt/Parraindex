{% set trans_day_hash = {
    "January": "janvier",
    "February": "février",
    "March": "mars",
    "April": "avril",
    "May": "mai",
    "June": "juin",
    "July": "juillet",
    "August": "août",
    "September": "septembre",
    "October": "octobre",
    "November": "novembre",
    "December": "décembre"
} %}

<div class="sponsor__content">

    {% include 'components/card.html.twig' with {
        'id': sponsor.godFather.id,
        'color': sponsor.godFather.color,
        'firstName': sponsor.godFather.firstName,
        'lastName': sponsor.godFather.lastName,
        'picture': 'images/pictures/' ~ sponsor.godFather.picture,
        'characteristics': sponsor.godFather.characteristics,
        'description': sponsor.godFather.biography,
        'startYear': sponsor.godFather.startYear,
    } %}

    <div class="sponsor__content-link">
        <p class="sponsor__content-link-date">
            {{ sponsor.formatDate('j') }} {{ trans_day_hash[sponsor.formatDate('F')] }} {{ sponsor.formatDate('Y') }}
        </p>
        <div class="sponsor__content-link-line">
            <img src="{{ asset('images/icons/' ~ sponsor.type.icon) }}" alt="icon" class="sponsor__content-link-icon">
        </div>
    </div>

    {% include 'components/card.html.twig' with {
        'id': sponsor.godChild.id,
        'color': sponsor.godChild.color,
        'firstName': sponsor.godChild.firstName,
        'lastName': sponsor.godChild.lastName,
        'picture': 'images/pictures/' ~ sponsor.godChild.picture,
        'characteristics': sponsor.godChild.characteristics,
        'description': sponsor.godChild.biography,
        'startYear': sponsor.godChild.startYear,
    } %}

</div>