<div class="person-family">

    <p class="person-family__title">
        Parrains
    </p>

    <div class="person-family__wrapper">

        {% for sponsor in godFathers %}
            {% set godFather = sponsor.godfather %}
            <a href="{{ router.url('sponsor', {'id': sponsor.id}) }}"
               class="person-family__portrait person-family__portrait--godfather">
                <img src="{{ picture(godFather.picture) }}" alt="{{ godFather.firstName }}"
                     class="person-family__portrait-image">

                <p class="person-family__portrait-name">
                    {{ godFather.firstName }}
                    <br>
                    {{ godFather.lastName }}
                </p>
            </a>
        {% endfor %}

        <img src="{{ picture(person.picture) }}" alt="{{ person.firstName }}" class="person-family__portrait--personal"
             style="background-color : {{ person.bannerColor }}">

        {% for sponsor in godChildren %}
            <a href="{{ router.url('sponsor', {'id': sponsor.id}) }}"
               class="person-family__portrait person-family__portrait--godchild">
                <img src="{{ picture(sponsor.godChild.picture) }}" alt="{{ sponsor.godChild.firstName }}"
                     class="person-family__portrait-image">
                <p class="person-family__portrait-name">
                    {{ sponsor.godChild.firstName }}
                    <br>
                    {{ sponsor.godChild.lastName }}
                </p>
            </a>
        {% endfor %}
    </div>

    <p class="person-family__title person-family__title--second">
        Fillots
    </p>

</div>