{% set classes = (classes ?? '') %}
{% set slug = ( slug ?? '') %}
{% set title = (title ?? '') %}
{% set options = (options ?? []) %}
{% set default = ((default ?? null) is not null ? default.title : '') %}

<div class="form__element {{ classes }}">

    <label class="form__element-label" for="{{ slug }}">{{ title }}</label>

    <select class="form__element-input form__element-input-select {{ classes }}" name="{{ slug }}" id="{{ slug }}"
            required>

        {% for id, title in options %}

            <option class="form__select-option" {% if title == default %} selected {% endif %} value="{{ id }}">{{ title }}</option>

        {% endfor %}

    </select>

</div>
